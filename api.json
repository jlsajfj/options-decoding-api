{
  "openapi": "3.0.0",
  "info": {
    "title": "Options Decoding API",
    "version": "1.0.0",
    "description": "Options nomenclature is complex"
  },
  "servers": [
    {
      "url": "http://140.238.151.56:5000",
      "description": "OCI instance"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "API usage instructions",
        "responses": {
          "200": {
            "description": "Usage instructions",
            "content": {
              "text/html": {}
            }
          }
        }
      }
    },
    "/health-check": {
      "get": {
        "description": "Health check",
        "responses": {
          "200": {
            "description": "Status",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "enum": ["alive"]
                }
              }
            }
          }
        }
      }
    },
    "/usage": {
      "post": {
        "description": "API usage instructions",
        "responses": {
          "200": {
            "description": "OpenAPI JSON file",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/decode-option": {
      "post": {
        "description": "Decodes options naming convention",
        "requestBody": {
          "description": "String to decode",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "option"
                ],
                "properties": {
                  "option": {"$ref": "#/components/schemas/encoded_option"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Decoded option",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/decoded_option"}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "encoded_option": {
        "type": "string",
        "description": "Option in standard naming convention",
        "pattern": "[A-Z]{1,6}\\d{6}[CP]\\d{8}",
        "example": "AAPL150416C00031420"
      },
      "decoded_option": {
        "type": "object",
        "description": "Option broken down",
        "required": [
          "symbol",
          "year",
          "month",
          "day",
          "option_type",
          "price"
        ],
        "properties": {
          "symbol": {
            "type": "string",
            "description": "Ticker of option",
            "minLength": 1,
            "maxLength": 6,
            "example": "AAPL"
          },
          "company_name": {
            "type": "string",
            "description": "Name of company",
            "example": "Apple"
          },
          "year": {
            "type": "integer",
            "description": "Expiration year",
            "example": 2015
          },
          "month": {
            "type": "integer",
            "description": "Expiration month",
            "example": 4
          },
          "day": {
            "type": "integer",
            "description": "Expiration day",
            "example": 16
          },
          "option_type": {
            "type": "string",
            "enum": [
              "call",
              "put"
            ]
          },
          "price": {
            "type": "number",
            "description": "Strike price",
            "example": 31.42
          }
        },
        "example": {
          "symbol": "AAPL",
          "company_name": "Apple",
          "year": 2015,
          "month": 4,
          "day": 16,
          "option_type": "call",
          "price": 31.42
        }
      }
    }
  }
}